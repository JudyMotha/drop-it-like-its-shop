<div class="row">
  <div class="col-md-6">
    <h2>Member Sign-In</h2>

    <form class="form login-container">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="login-btn">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Register</h2>

    <form class="form register-form">
      <div class="form-group">
        <label for="register-form">name:</label>
        <input class="form-input" type="text" id="name-register" />
      </div>
      <div class="form-group">
        <label for="email-register">email:</label>
        <input class="form-input" type="text" id="email-register" />
      </div>
      <div class="form-group">
        <label for="password-register">password:</label>
        <input class="form-input" type="password" id="password-register" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="register-btn">register</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
